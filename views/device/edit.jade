extends ../layouts/default
block content
  h2= device.name
  form(action="/devices/"+device.mac method="POST")
    .row
      .six.columns
        label(for="deviceName") Name
        input.u-full-width(type="text" name="name" placeholder="Human-friendly name" id="deviceName" value=device.name)
      .six.columns
        label(for="deviceMac") MAC
        input.u-full-width(type="text" name="mac" placeholder="aa:bb:cc:dd:ee:ff" id="deviceMac" value=device.mac)
    label(for="deviceDomain") Domain
    input.u-full-width(type="text" name="domain" placeholder="DNS subdomain" id="deviceDomain" value=device.domain)
    a.button.u-margin-right(href="/devices") Cancel
    button.button-primary(type="submit") Update
